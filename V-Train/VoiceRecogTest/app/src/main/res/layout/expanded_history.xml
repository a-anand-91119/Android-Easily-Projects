<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_hl_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#7c0a36"
        android:padding="4dp"
        android:textColor="#fff"
        android:textSize="20sp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_hl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        autofit:minTextSize="13sp"
        android:layout_alignBottom="@+id/tv_hl_class"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_hl_class" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_hl_from"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        autofit:minTextSize="13sp"
        android:background="#e4e4e4"
        android:layout_below="@+id/tv_hl_class"
        android:layout_alignParentStart="true" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_hl_to"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:background="#e4e4e4"
        android:maxLines="1"
        autofit:minTextSize="13sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_hl_from"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/tv_hl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hl_from"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_hl_pnr"
        android:layout_width="wrap_content"
        autofit:minTextSize="13sp"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hl_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>