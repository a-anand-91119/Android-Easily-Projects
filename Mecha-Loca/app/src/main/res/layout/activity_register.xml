<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:padding="16dp"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/create_your_account"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/et_reg_username"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name_reg"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_reg_name"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:layout_gravity="center_horizontal"
                android:hint="Name"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password_reg"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:id="@+id/et_reg_password"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password_confirm_reg"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:id="@+id/et_reg_confirmpassword"
                android:layout_gravity="center_horizontal"
                android:hint="Confirm Password"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email_reg"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:id="@+id/et_reg_email"
                android:layout_gravity="center_horizontal"
                android:hint="Email Id"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone_reg"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="phone"
                android:ems="10"
                android:textColor="#000000"
                android:textColorHint="#999"
                android:id="@+id/et_reg_phone"
                android:layout_gravity="center_horizontal"
                android:hint="Mobile Number"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Register As User" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Register As Mechanic" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:id="@+id/bt_signup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</ScrollView>
