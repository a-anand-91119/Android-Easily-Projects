<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a3solutions.e_college">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminActivity" />
        <activity android:name=".StudentActivity" />
        <activity android:name=".FacultyActivity" />
        <activity android:name=".UploadActivity" />
        <activity android:name=".AttendanceActivity" />
        <activity android:name=".ViewNotesActivity" />
        <activity android:name=".ViewAttendanceActivity" />
        <activity android:name=".AddStudentActivity" />
        <activity android:name=".AddFacultyActivity" />
        <activity android:name=".AddAdminActivity" />
        <activity android:name=".AdminAttendanceActivity" />
        <activity android:name=".ViewFacultyAttendance" />
        <activity android:name=".AnswerActivity" />
        <activity android:name=".AskQuestionActivity" />
        <activity android:name=".AnswerListActivity" />
        <activity android:name=".AnswerToQuestionActivity"></activity>
    </application>

</manifest>